pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id') // Replace with your Jenkins credential ID
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key') // Replace with your Jenkins credential ID
        TF_VAR_region = 'us-east-1'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-repo/my-web-app.git' // Replace with your Git repository URL
            }
        }
        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan'
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
        stage('Deploy Application') {
            steps {
                script {
                    def instanceIp = sh(script: 'terraform output -raw instance_ip', returnStdout: true).trim()
                    sh "scp -o StrictHostKeyChecking=no -i /path/to/your/key.pem app/index.html ec2-user@${instanceIp}:/usr/share/nginx/html/index.html"
                }
            }
        }
    }
    // post {
       // always {
        //   echo 'Cleaning up...'
          //  dir('terraform') {
            //    sh 'terraform destroy -auto-approve'
            //}
        //}
    //}
}
